<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:fontFamily">@font/montserratblack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Icon" parent="MaterialAlertDialog.Material3.Title.Icon">
        <item name="cornerRadius">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyLarge</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/montserratblack</item>
        <item name="android:fontFamily">@font/montserratblack</item>
        <item name="android:textColor">@color/main_blue</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">21dp</item>
        <item name="android:backgroundTint">@color/secondary_blue_gradient</item>
    </style>
</resources>