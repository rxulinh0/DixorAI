<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DixorAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:itemTextAppearance">@style/CustomTextItems</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App.BodyLarge</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>
    </style>
    <style name="SplashDixorAI" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="StyleExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
    </style>
    <style name="ChipTextAppearance__MontserratBlack" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/montserratblack</item>
    </style>
    <style name="CustomTextItems" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:fontFamily">@font/montserratbold</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="AboutUsDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Customize dialog theme -->
        <item name="colorSurface">@color/secondary_blue_gradient</item>
        <item name="colorOnSurface">@color/main_blue</item>
        <item name="colorPrimary">@color/secondary_blue_gradient</item>
        <item name="colorPrimaryVariant">@color/secondary_blue_gradient</item>
        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorSecondaryVariant">@color/main_blue</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorSurface">@color/secondary_blue_gradient</item>
        <item name="colorOnSurface">@color/main_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.App.BodyLarge</item>
        <item name="android:backgroundTint">@color/secondary_blue_gradient</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Title.Body.Text</item>
        <item name="materialAlertDialogTitleIconStyle">@style/MaterialAlertDialog.App.Title.Icon</item>
    </style>
</resources>
