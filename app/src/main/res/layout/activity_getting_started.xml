<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getting_started_a"
    android:background="@color/black">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserratblack"
                android:textSize="48sp"
                android:text="@string/welcome_page_string"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/cardview_light_background"
                android:textAlignment="textStart"
                android:justificationMode="none"
                android:id="@+id/getting_started_a_main_title_tv"
                android:outlineAmbientShadowColor="@color/main_blue"
                android:outlineSpotShadowColor="@color/main_blue"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/getting_started_animationView"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_below="@+id/getting_started_a_main_title_tv"
                app:lottie_rawRes="@raw/automation_robot_anim"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/getting_started_a_next_button"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/main_blue"
                app:cardElevation="20dp"
                android:outlineAmbientShadowColor="@color/main_blue"
                android:outlineSpotShadowColor="@color/main_blue"
                android:layout_below="@+id/getting_started_animationView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="21dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/getting_started_a_next_button_tv"
                    android:fontFamily="@font/montserratblack"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:text="@string/welcome_page_button_string"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>