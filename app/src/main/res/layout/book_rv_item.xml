<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookItemCard"
        android:layout_marginBottom="21dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="10dp"
        app:cardCornerRadius="33dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="21dp"
                android:layout_marginVertical="10dp">
                <ImageView
                    android:id="@+id/bookrvitemicon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/book_black"/>
                <TextView
                    android:id="@+id/bookRvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratblack"
                    android:layout_toRightOf="@id/bookrvitemicon"
                    android:text="Book Sample"
                    android:autoSizeMinTextSize="18sp"
                    android:autoSizeMaxTextSize="24sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:textColor="@color/secondary_blue_gradient"
                    android:textSize="24sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/bookRvItemDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratbold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/secondary_blue_gradient"
                    android:maxLines="1"
                    android:text="MM/DD/YY"
                    android:textSize="10sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>